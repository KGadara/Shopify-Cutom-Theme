<div class="ai-comparison-table-wrapper-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading != blank %}
    <h2 class="ai-comparison-table-heading-{{ ai_gen_id }}">
      {{ block.settings.heading }}
    </h2>
  {% endif %}

  <div class="ai-comparison-table-{{ ai_gen_id }}">
    <div class="ai-comparison-table-header-{{ ai_gen_id }}">
      <div class="ai-comparison-table-header-cell-{{ ai_gen_id }}">
        {{ block.settings.features_column_title }}
      </div>
      <div class="ai-comparison-table-header-cell-{{ ai_gen_id }} ai-comparison-table-version-a-{{ ai_gen_id }}">
        {{ block.settings.version_a_title }}
      </div>
      <div class="ai-comparison-table-header-cell-{{ ai_gen_id }} ai-comparison-table-version-b-{{ ai_gen_id }}">
        {{ block.settings.version_b_title }}
      </div>
    </div>

    <div class="ai-comparison-table-body-{{ ai_gen_id }}">
      {% assign features = 'feature_1,feature_2,feature_3,feature_4,feature_5,feature_6' | split: ',' %}
      {% for feature in features %}
        {% assign feature_text = block.settings[feature] %}
        {% assign feature_version_a = feature | append: '_version_a' %}
        {% assign feature_version_b = feature | append: '_version_b' %}
        {% assign version_a_enabled = block.settings[feature_version_a] %}
        {% assign version_b_enabled = block.settings[feature_version_b] %}
        {% assign row_index = forloop.index0 %}

        {% if feature_text != blank %}
          <div class="ai-comparison-table-row-{{ ai_gen_id }}" style="--ai-row-delay-{{ ai_gen_id }}: {{ row_index | times: 0.1 }}s; --ai-icon-delay-{{ ai_gen_id }}: {{ row_index | times: 0.05 }}s;">
            <div class="ai-comparison-table-cell-{{ ai_gen_id }} ai-comparison-table-feature-{{ ai_gen_id }}">
              {{ feature_text }}
            </div>
            <div class="ai-comparison-table-cell-{{ ai_gen_id }} ai-comparison-table-version-cell-{{ ai_gen_id }} ai-comparison-table-version-a-cell-{{ ai_gen_id }}">
              {% if version_a_enabled %}
