{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-comparison-table-wrapper-{{ ai_gen_id }} {
    width: 100%;
    max-width: 900px;
    margin: 0 auto;
  }

  .ai-comparison-table-heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: {{ block.settings.heading_bottom_spacing }}px;
    font-family: {{ block.settings.heading_font_family.family }}, {{ block.settings.heading_font_family.fallback_families }};
    font-size: {{ block.settings.heading_font_size }}px;
    font-weight: {{ block.settings.heading_font_weight }};
    color: {{ block.settings.heading_color }};
    line-height: 1.2;
  }

  .ai-comparison-table-{{ ai_gen_id }} {
    width: 100%;
    font-family: {{ block.settings.font_family.family }}, {{ block.settings.font_family.fallback_families }};
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    background-color: {{ block.settings.table_background }};
    {% if block.settings.show_shadow %}
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
    {% endif %}
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
  }

  .ai-comparison-table-header-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    background-color: {{ block.settings.header_background }};
  }

  .ai-comparison-table-header-cell-{{ ai_gen_id }} {
    padding: {{ block.settings.header_padding }}px;
    text-align: center;
    font-weight: {{ block.settings.header_font_weight }};
    font-size: {{ block.settings.header_font_size }}px;
    color: {{ block.settings.header_text_color }};
    {% if block.settings.show_header_borders %}
      border-right: 1px solid {{ block.settings.header_border_color }};
    {% endif %}
  }

  .ai-comparison-table-header-cell-{{ ai_gen_id }}:last-child {
    border-right: none;
  }

  .ai-comparison-table-header-cell-{{ ai_gen_id }}:first-child {
    text-align: left;font-weight: {{ block.settings.feature_header_font_weight }};
  }

  .ai-comparison-table-us-header-{{ ai_gen_id }} {
    background-color: {{ block.settings.us_header_background }};
    color: {{ block.settings.us_header_text_color }};
  }

  .ai-comparison-table-others-header-{{ ai_gen_id }} {
    background-color: {{ block.settings.others_header_background }};
    color: {{ block.settings.others_header_text_color }};
  }

  .ai-comparison-table-body-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
  }

  .ai-comparison-table-row-{{ ai_gen_id }} {
    display: contents;
  }

  .ai-comparison-table-cell-{{ ai_gen_id }} {
    padding: {{ block.settings.cell_padding }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: {{ block.settings.cell_min_height }}px;
    font-size: {{ block.settings.body_font_size }}px;
    {% if block.settings.show_row_borders %}
      border-bottom: 1px solid {{ block.settings.row_border_color }};
    {% endif %}{% if block.settings.show_column_borders %}
      border-right: 1px solid {{ block.settings.column_border_color }};
    {% endif %}
  }

  .ai-comparison-table-cell-{{ ai_gen_id }}:first-child {
    justify-content: flex-start;
    font-weight: {{ block.settings.feature_font_weight }};
    color: {{ block.settings.feature_text_color }};
    background-color: {{ block.settings.feature_background }};
  }

  .ai-comparison-table-cell-{{ ai_gen_id }}:nth-child(3n-1) {
    background-color: {{ block.settings.us_background }};
    color: {{ block.settings.us_text_color }};
  }

  .ai-comparison-table-cell-{{ ai_gen_id }}:nth-child(3n) {
    background-color: {{ block.settings.others_background }};
    color: {{ block.settings.others_text_color }};
    border-right: none;
  }

  .ai-comparison-table-row-{{ ai_gen_id }}:last-child .ai-comparison-table-cell-{{ ai_gen_id }} {
    border-bottom: none;
  }

  .ai-comparison-table-icon-{{ ai_gen_id }} {
    font-size: {{ block.settings.icon_size }}px;
    line-height: 1;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .ai-comparison-table-icon-yes-{{ ai_gen_id }} {
    color: {{ block.settings.yes_icon_color }};
  }

  .ai-comparison-table-icon-no-{{ ai_gen_id }} {
    color: {{ block.settings.no_icon_color }};
  }

  .ai-comparison-table-svg-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .ai-comparison-table-svg-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
  }

  .ai-comparison-table-svg-icon-yes-{{ ai_gen_id }} svg {
    fill: {{ block.settings.yes_icon_color }};
    stroke: {{ block.settings.yes_icon_color }};
  }

  .ai-comparison-table-svg-icon-no-{{ ai_gen_id }} svg {
    fill: {{ block.settings.no_icon_color }};
    stroke: {{ block.settings.no_icon_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-comparison-table-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_heading_font_size }}px;
      margin-bottom: {{ block.settings.mobile_heading_bottom_spacing }}px;
    }

    .ai-comparison-table-{{ ai_gen_id }} {
      border-radius: {{ block.settings.mobile_border_radius }}px;
    }

    .ai-comparison-table-header-{{ ai_gen_id }},
    .ai-comparison-table-body-{{ ai_gen_id }} {
      grid-template-columns: 1.8fr 1fr 1fr;
    }

    .ai-comparison-table-header-cell-{{ ai_gen_id }},
    .ai-comparison-table-cell-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_padding }}px;
      min-height: {{ block.settings.mobile_cell_min_height }}px;
    }

    .ai-comparison-table-header-cell-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_header_font_size }}px;
    }

    .ai-comparison-table-cell-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_body_font_size }}px;
    }

    .ai-comparison-table-icon-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_icon_size }}px;
    }

    .ai-comparison-table-svg-icon-{{ ai_gen_id }} {
      width: {{ block.settings.mobile_icon_size }}px;
      height: {{ block.settings.mobile_icon_size }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-comparison-table-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.small_mobile_heading_font_size }}px;
      margin-bottom: {{ block.settings.small_mobile_heading_bottom_spacing }}px;
    }

    .ai-comparison-table-header-{{ ai_gen_id }},
    .ai-comparison-table-body-{{ ai_gen_id }} {
      grid-template-columns: 1.5fr 1fr 1fr;
    }

    .ai-comparison-table-header-cell-{{ ai_gen_id }},
    .ai-comparison-table-cell-{{ ai_gen_id }} {
      padding: {{ block.settings.small_mobile_padding }}px;
      min-height: {{ block.settings.small_mobile_cell_min_height }}px;
    }

    .ai-comparison-table-header-cell-{{ ai_gen_id }} {
      font-size: {{ block.settings.small_mobile_header_font_size }}px;
    }

    .ai-comparison-table-cell-{{ ai_gen_id }} {
      font-size: {{ block.settings.small_mobile_body_font_size }}px;
    }
  }
{% endstyle %}

